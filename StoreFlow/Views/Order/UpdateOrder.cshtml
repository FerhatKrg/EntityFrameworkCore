@model Order
@{
    ViewData["Title"] = "UpdateOrder";
    Layout = "~/Views/Layout/Index.cshtml";
}

 


<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sipariş Güncelleme Sayfası</h4>

                <form class="forms-sample" method="post">
                    <input type="hidden" asp-for="OrderId" />
                    <div class="form-group">
                        <label for="exampleInputName1">Ürün Seçiniz</label>
                        <select asp-for="ProductId" asp-items="@ViewBag.product" class="form-control">
                            <option value="">-- Ürün Seçiniz --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Müşteri Seçiniz</label>
                        <select asp-for="CustomerId" asp-items="@ViewBag.customers" class="form-control">
                            <option value="">-- Müşteri Seçiniz --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Sipariş Adeti</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Sipariş Adetini Yazınız ... " asp-for="OrderCount">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Birim Fiyatı</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Birim Fiyatı Giriniz... " asp-for="UnitPrice">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Toplam Fiyat</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Toplam Fiyatı Giriniz... " asp-for="TotalPrice">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Sipaiş Durumu</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Sipariş Durumunu Giriniz... " asp-for="Status">
                    </div>

                    <button type="submit" class="btn btn-success mr-2">Siparişi Güncelle</button>

                </form>
            </div>
        </div>
    </div>
</div>





