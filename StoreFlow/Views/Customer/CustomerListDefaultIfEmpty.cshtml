@model List<Customer>

@{
    ViewData["Title"] = "CustomerListDefaultIfEmpty";
    Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}



<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h3 class="card-title">Müşteri Listesi</h3>

				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>#</th>
								<th>Müşteri Adı</th>
								<th>Müşteri Şehir</th>
								<th>Bakiye</th>
								<th>Sil</th>
								<th>Güncelle</th>

							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th>@count</th>
									<td>@item.CustomerName @item.CustomerSurname</td>
									<td>@item.CustomerCity / @item.CustomerDiscrict</td>
									<td>@item.CustomerBalance TL</td>

									<td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-outline-success">Güncelle</a></td>

								</tr>
							}


						</tbody>
					</table>
					<td><a href="/Customer/CreateCustomer/" class="btn btn-primary">Yeni Müşteri Girişi</a></td>
				</div>
			</div>
		</div>
	</div>
</div>



